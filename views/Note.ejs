        <div class="modal fade" tabindex="-1" role="dialog" id="newNoteModal" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered" role="content">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title text-center" id="exampleModalCenterTitle">New Task</h3>
                        <button type="button" class="close" data-dismiss="modal" >&times;</button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-row  mt-3 ">
                                <input type="text" class="form-control col-12 col-md-6" maxlength="8" id="notetitle" placeholder="Title">
                            </div>  
                            <div class="form-row mt-3">
                                <textarea class="form-control col-12" id="notetext" placeholder="Text" rows="4"></textarea>
                            </div>       
                            <div class="form-row mt-3 center">
                                <button type="button" class="btn btn-secondary btn-sm " data-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-warning btn-sm ml-1">ADD</button>        
                            </div>                  
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <header class="jumbotron">
            <div class="container">
                <div class="row row-header align-items-center">
                    <div class="d-none d-sm-block col-sm-2 col-md-1">
                        <img src="img/notes.png" width="80px" height="80px">
                    </div>
                    <div class="col-12 col-sm-2">
                        <h1 id="title">TO DO</h1>
                    </div>
                    <div class="d-none d-md-block col-md-8 pl-md-5 pl-lg-2 col-lg-7">
                        <blockquote class="blockquote">
                            <footer class="blockquote-footer caption">
                                Each day I will accomplish one thing on my to do list
                            </footer>
                        </blockquote>
                    </div>
                    <div class="col-12 col-lg-2 ">
                        <button class="btn add" type="button" id="newNote">
                            <img  src="img/add.png" width="100px" height="100px">
                        </button>
                    </div>
                </div>
            </div>
        </header>
